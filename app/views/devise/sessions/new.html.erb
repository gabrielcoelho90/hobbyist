<div class="container height-100 d-flex align-items-center justify-content-center my-5">
  <div class="card login-card col-md-6 shadow-lg p-4">
    <h2 class="text-center text-primary mb-4">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
      <div class="form-inputs mb-3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'form-control' },
                    wrapper_html: { class: 'form-group' },
                    label_html: { class: 'form-label' } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: 'form-control' },
                    wrapper_html: { class: 'form-group' },
                    label_html: { class: 'form-label' } %>
        <%= f.input :remember_me, as: :boolean, label_html: { class: 'form-check-label' }, input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
