<div class="container profile-page-container height-100 mb-3">
  <div class="row">
    <div class="col-12 text-center">
      <h1><strong>Welcome, <%= current_user.username %>!</strong></h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-12 text-center">
      <div class="d-flex align-items-center justify-content-center mx-auto">
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, height: 300, width: 300, crop: :fill, class: 'profile-page-photo' %>
        <% else %>
          <div class='profile-page-photo'>
            Profile Photo
          </div>
        <% end %>
      </div>
      <button type="button" class="btn btn-primary my-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Update Profile Photo
      </button>
    </div>
  </div>

  <div class="row justify-content-center my-2">
    <div class="col-auto">
      <%= link_to 'Private Messages', private_chatrooms_path, class: 'btn btn-dark rounded-pill' %>
      <%= link_to 'Groupchats', groupchats_path, class: 'btn btn-dark rounded-pill' %>
    </div>
  </div>

  <div class="row justify-content-center mb-4">
    <div class="col-6">
      <div class="profile-page-card card position-relative">
        <div class="card-body" data-controller="profile-remove-interests">
          <div class="d-flex">
            <h3>Your Interests</h3>
            <%#= link_to render('<i class="fa-solid fa-pen-to-square ms-2 text-secondary"></i>'), profile_path %>
              <%#= link_to profile_path, data: { action: "click->profile_remove_interests#showIcons" },
                   class: 'ms-2 text-secondary' do %>
                <%#= icon('fa-solid', 'pen-to-square') %>
              <%# end %>
              <button id="delete-interests-icon" class="btn p-0 border-0 text-secondary d-flex align-items-top ms-2"
              data-action="click->profile-remove-interests#toggleIcons">
                <%= icon('fa-solid', 'pen-to-square') %>
              </button>
              <%= link_to profile_path, class: 'ms-2 text-secondary fs-5 d-none',
                  data: { profile_remove_interests_target: "resetProfileEdit", action: "click->profile-remove-interests#toggleIcons"} do %>
                <%= icon('fa-solid', 'check') %>
              <% end %>
          </div>
          <div class="row">
            <div class="col-9">
              <div class="d-flex flex-wrap">
                <% current_user.interests.each do |interest| %>
                  <div>
                    <span class="badge rounded-pill bg-success m-1"><%= interest.interestable.name %></span>
                    <%# <i class="fa-solid fa-trash-can delete-icon text-primary"></i> %>
                    <%= link_to interest_path(interest), class: 'delete-icon text-primary d-none',
                    data: { turbo_method: :delete, profile_remove_interests_target: "interestDelete"} do %>
                      <%= icon('fa-solid', 'trash', class: 'fs-7') %>
                    <% end %>
                  </div>
                <% end %>
                <%= link_to '+Interests', new_interest_path, class: 'badge rounded-pill bg-new-interest m-1 border' %>
              </div>
            </div>
            <div class="col-3 d-flex align-items-end justify-content-end">
              <%= link_to 'Find Hobbyists', search_page_path, class: 'btn btn-primary find-hobbyists-btn' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mb-4">
    <div class="col-6">
      <div class="profile-page-card card">
        <div class="card-body">
          <h3>Your Address</h3>
          <p><%= current_user.address %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Update your profile photo</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for current_user, html: { multipart: true } do |f| %>
          <%= f.input :photo, as: :file %>
      </div>
      <div class="modal-footer">
            <%= f.button :submit, "Change photo", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
