<div class="container profile-page-container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>Welcome, <%= current_user.username %>!</h1>
    </div>
  </div>

  <div>

  </div>
  <div class="row justify-content-center">
    <div class="col-12 text-center">
      <div class="d-flex align-items-center justify-content-center mx-auto">
        <%#= cl_image_tag("ssr3iw6xtbojbs10cn9r", width: 400, height: 300, crop: :fill) %>
        <%= cl_image_tag @user.photo.key, height: 300, width: 300, crop: :fill, class: 'profile-page-photo' %>
        <%#= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center mb-4">
    <div class="col-auto">
      <%= link_to 'Private Messages', '#', class: 'btn btn-dark rounded-pill', disabled: true %>
    </div>
    <div class="col-auto">
      <%= link_to 'Group Chats', '#', class: 'btn btn-dark rounded-pill', disabled: true %>
    </div>
  </div>
  <div class="row justify-content-center mb-4">
    <div class="col-6">
      <div class="profile-page-card card">
        <div class="card-body">
          <h3>Your Interests</h3>
          <div class="d-flex flex-wrap">
            <% current_user.interests.each do |interest| %>
              <span class="badge rounded-pill bg-success m-1"><%= interest.interestable.name %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center mb-4">
    <div class="col-6">
      <div class="profile-page-card card">
        <div class="card-body">
          <h3>Your Address</h3>
          <p><%= current_user.address %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-left">
      <%= link_to 'Edit', 'profile/edit', class: 'btn btn-primary'%>
    </div>
  </div>
</div>

<div>
  <%= link_to 'Add photo', 'profile/edit', class: 'btn btn-primary'%>
  <%= simple_form_for (current_user) do |f| %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end %>
</div>
