<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-12">
      <%# Interests as pills for the current user %>
      <div class="d-flex flex-wrap">
        <% current_user.interests.each do |interest| %>
          <span class="badge rounded-pill bg-primary m-1"><%= interest.interestable.name %></span>
        <% end %>
      </div>
    </div>
    <div class="col-12">
      <%# Existing working search bar %>
      <div class="main-search-bar" data-map-target="mainSearch"></div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <h1>Find Hobbyists near you</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-5">
      <% @users.each do |user| %>
        <div class="card mb-3">
          <div class="card-body d-flex">
            <div class="profile-placeholder d-flex align-items-center justify-content-center">
              Placeholder
            </div>
            <div class="flex-grow-1 ms-3">
              <h5 class="card-title"><%= user.username %></h5>
              <p class="card-text">Distance: 1km</p>
              <div class="d-flex flex-wrap">
                <% user.interests.each do |interest| %>
                  <span class="badge rounded-pill bg-success m-1"><%= interest.interestable.name %></span>
                <% end %>
              </div>
            </div>
            <button class="btn btn-primary ms-auto" disabled>Message</button>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-7">
      <div style="width: 100%; height: 600px;" data-map-target="mapContainer"></div>
    </div>
  </div>
</div>
